@import './panel'
@import './thumbview'
@import './canvas'

.thumbview
.canvas
.modal-overlay
  position: fixed
  width: 100%
  height: 100%
  top: 0
  left: 0

.modal-overlay
  z-index: 100
  text-align: center
  background: rgba(0,0,0,0.8)
  overflow-x: hidden
  overflow-y: auto
  white-space: nowrap
  .modal-stick
    height: 100%
    width: 1px
    margin-right: -1px
    overflow: hidden
  .modal-stick
  .modal-content
    display: inline-block
    vertical-align: middle
